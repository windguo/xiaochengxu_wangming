<!-- 单行文字向上滚动开始 -->
<view class="textwrap">
	<swiper class='textUp' vertical="true" autoplay="true" circular="true" interval="3000" display-multiple-items='1'>
			<block wx:for-index="idx" wx:for='{{textData}}'>
				<swiper-item>
					<view class="icon icon-profile first">
						欢迎<span>{{username}}</span>在<span>{{registertime}}</span>加入会员
					</view>
				</swiper-item>
				<swiper-item>
					<view class="icon icon-profile second">
						今日新增<span>{{todayRegister}}</span>名会员,共有<span>{{members}}</span>名。
					</view>
				</swiper-item>
				<swiper-item>
					<view class="icon icon-rank third">
						今日新增<span>{{todayUpdate}}</span>个网名,共有<span>{{total}}</span>个
						</view>
				</swiper-item>
			</block> 
	</swiper>
</view>
<!-- 单行文字向上滚动结束 -->