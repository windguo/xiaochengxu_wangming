.swiper-tab{  
	width: 100%;  
	text-align: center;  
	line-height: 80rpx;
	background: #fff;
}  
.swiper-tab-list{  
	font-size: 36rpx;
	padding:10rpx 0;
	display: inline-block;  
	width: 50%;  
	color: #272727;
}  
.on{ color: #c00}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; } 
.node-list{
    display: flex;
    flex-flow: wrap;
    margin:30rpx 0 0rpx 35rpx;
}
.node-item {
    width: 46%;
    background: #fffff0;
    border-radius: 20rpx;
		line-height: 60rpx;
    color:#333;
    text-align: center;
    margin-right: 25rpx;
    margin-bottom: 40rpx;
		box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
}
.node-item .top{
	padding:30rpx;
}
.node-item .top .t{
	max-width: 360rpx;
	font-size: 30rpx;
	overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.node-item .bottom{
	background:#fff;
	border-top:1rpx solid #eee;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
	color: #666;
	font-weight: 300;
	padding:10rpx;
	display: flex;
	justify-content: space-around;
}
.node-item .bottom .onclick{
	font-size: 24rpx;
}
.node-item .bottom .onclick span{
	font-size: 30rpx;
	color: #ed6ea0;
}
.node-item .bottom .ed{
	color: #ed6ea0
}
.node-item .bottom .username{
	max-width: 300rpx;
	text-overflow: ellipsis;
  white-space: nowrap;
	overflow: hidden;
}