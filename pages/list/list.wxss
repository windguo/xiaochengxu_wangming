.listViews{background: #fff;margin:40rpx;border-radius:20rpx;color:#666;text-align: center;padding:30rpx;}
.listViews h2{padding-bottom:20rpx;display: block;}
.img{height:100rpx;width: 100%}
.scoll-h{height: 100%;}

.node-list{
    display: flex;
    flex-flow: wrap;
    margin:30rpx 0 0rpx 35rpx;
}
.node-item {
    width: 46%;
    background: #fffff0;
    border-radius: 20rpx;
		line-height: 60rpx;
    color:#333;
    text-align: center;
    margin-right: 25rpx;
    margin-bottom: 40rpx;
		box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
}
.node-item .top{
	padding:30rpx;
}
.node-item .top .t{
	max-width: 360rpx;
	font-size: 36rpx;
	overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.node-item .bottom{
	background:#fff;
	border-top:1rpx solid #eee;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
	color: #666;
	font-weight: 300;
	padding:10rpx;
	display: flex;
	justify-content: space-around;
}
.node-item .bottom .onclick{
	font-size: 24rpx;
}
.node-item .bottom .onclick span{
	font-size: 30rpx;
	color: #ed6ea0;
}
.node-item .bottom .ed{
	color: #ed6ea0
}
.node-item .bottom .username{
	max-width: 150rpx;
	text-overflow: ellipsis;
  white-space: nowrap;
	overflow: hidden;
}

.sharetoFrinend{
	width:60%;
	position: fixed;
	bottom:30rpx;
	font-size: 36rpx;
	left:20%;
	opacity: 0.85
}

.nodata{margin-top:150rpx;font-size: 50rpx;color: #999;text-align: center;font-weight: 100;}