.wrap{
	width: 100%;
	height:100%;
	background: #fff;
}
.first{
	background-image: linear-gradient(60deg, #a8edea 0%, #fed6e3 100%);
}
.two{
	background-image: linear-gradient(-20deg, #e9defa 0%, #fbfcdb 100%);
}

.icon-back,.icon-home{
	font-weight: 100;
	font-size: 36rpx;
	margin-right:30rpx;
}
.icon-home{
	left:40rpx
}


.tips{
	margin-left:50rpx;
}

.anim {
    animation: jiggle 2s ease-in infinite;
}
@keyframes jiggle {
    48%, 62% {
				color:#e14fad;
    }
    50% {
        color:#f9d423;
    }
		80% {
        color:#ff7eb3;
    }
}

.h1{padding:40rpx;text-align: center;background: #fff;margin:60rpx 40rpx;border-radius: 20rpx;line-height: 70rpx;font-size: 40rpx;color: orangered;box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);}
.tip{font-size: 30rpx;color: #999;background:#fff;}
.h2{text-align: center;padding:40rpx 0 30rpx 0;display: flex;justify-content: space-between;margin:0 30rpx;}
.node-list{
    display: flex;
    flex-flow: wrap;
    margin:30rpx 0 0rpx 35rpx;
}
.node-item {
    width: 38%;
    background: #ffffff;
    border-radius: 20rpx;
		line-height: 60rpx;
    color:#333;
		padding:30rpx;
    text-align: center;
    margin-right: 25rpx;
    margin-bottom: 40rpx;
		box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
}
.returnHome{color: #999;}

swiper{height:300rpx;font-weight: 300}
.swiper_item{text-align:center;font-size:50rpx;line-height:140rpx;height:300rpx;}
swiper .img{height:300rpx;width:100%}
.shares{
	margin:50rpx 40rpx;
	align-items: center;
	display: flex;
	justify-content: space-around;
}
button[plain]{ border:0;padding:0;margin:0;font-size:36rpx;color: #666;line-height: 2.0!important;}
.bottom{
	color: #666;
	display: flex;
	justify-content: space-around;
}
.bottom .icon{
	font-size: 36rpx;
	margin-left:10rpx;
}

.bottom .ed{color: #e14fad;}